<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/colorLightGrey" />
            <solid android:color="@color/colorLightGrey"/>
            <!--<gradient android:angle="-90" android:startColor="@color/colorWhite" android:endColor="@color/colorLightGrey"  />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/colorLightGrey" />
            <solid android:color="@color/colorLightGrey"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/colorLightGrey" />
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000" />
        </shape>
    </item>
</selector>