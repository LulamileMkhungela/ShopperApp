<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".biz.profile.BsFeedback">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Report feedback"
        android:textColor="@color/colorLightGrey"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="report_we_always_enjoy_hearing_any_feedback_queries_or_technical_problems_with_the_application"
        android:textAlignment="center"
        android:textColor="@color/colorLightGrey"
        android:textSize="16sp"
        tools:ignore="SpUsage" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Name of your report"
        android:textColor="@color/colorLightGrey"
        android:textColorHint="@color/colorLightGrey">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/colorLightGrey"
            android:textColorHint="@color/colorLightGrey"
            android:textSize="18sp"
            tools:targetApi="o" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Describe your feedback"
        android:maxLines="450"
        android:minHeight="130dp"
        android:textColor="@color/colorLightGrey"
        android:textColorHint="@color/colorLightGrey">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:inputType="text"
            android:maxLines="450"
            android:minHeight="130dp"
            android:padding="6dp"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorLightGrey"
            android:textSize="18sp"
            tools:targetApi="o" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:baselineAligned="false"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:fontFamily="@font/gotham"
                android:scaleType="fitCenter"
                android:text="back"
                android:textColor="@color/colorLightGrey"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/bg"
                android:fontFamily="@font/gotham"
                android:text="Submit"
                android:textColor="@color/colorLightGrey"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>