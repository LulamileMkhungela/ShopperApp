<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".BsYouSellPostView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tweet_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Widget.AppCompat.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.DayNight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tweet_detail_toolbar_back_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_back_button_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/tweet_detail_toolbar_back_button"
                android:gravity="center"
                android:text="Your Offer Detail"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_edit" />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tweet_detail_toolbar">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- TWEET BODY -->

                <RelativeLayout
                    android:id="@+id/rlBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivTweetedImageD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/img_post" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivTweetedImageD"
                        android:layout_marginTop="6dp"
                        android:text="11hrs ago"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_retweet_green_svg"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/vtSeparator1"
                    android:layout_width="match_parent"
                    android:layout_height="0.075dp"
                    android:layout_below="@+id/rlBody"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorLightGrey" />

                <!--  INFO -->

                <RelativeLayout
                    android:id="@+id/rlTweetsInfo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vtSeparator1">

                    <TextView
                        android:id="@+id/usernameTextView1"
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="What are you offering"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_below="@id/usernameTextView1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Clothes"

                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/viewParent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/colorLightGrey" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.075dp"
                    android:layout_below="@+id/rlTweetsInfo1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorLightGrey" />
                <!--  INFO -->

                <RelativeLayout
                    android:id="@+id/rlTweetsInfo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTweetsInfo1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/usernameTextView2"
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="Description"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_below="@id/usernameTextView2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Joburg"
                        android:textColor="@color/colorLightGrey"

                        android:textSize="16sp" />

                    <ImageView
                        style="@style/viewParent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/colorLightGrey" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.075dp"
                    android:layout_below="@+id/rlTweetsInfo2"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorLightGrey" />

                <!--  INFO -->

                <RelativeLayout
                    android:id="@+id/rlTweetsInfo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTweetsInfo2"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/usernameTextView3"
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="Price"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_below="@id/usernameTextView3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="R200"

                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/viewParent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/colorLightGrey" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rlTweetsInfo3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorDarkLine" />

                <!--  INFO -->

                <RelativeLayout
                    android:id="@+id/rlTweetsInfo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTweetsInfo3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/usernameTextView4"
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="Location"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_below="@id/usernameTextView4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Joburg"

                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/viewParent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/colorLightGrey" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.075dp"
                    android:layout_below="@+id/rlTweetsInfo3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorLightGrey" />

                <RelativeLayout
                    android:id="@+id/rlTweetsInfo5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTweetsInfo4"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/usernameTextView5"
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="Cell number"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_below="@id/usernameTextView5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="0678997677"

                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/viewParent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/colorLightGrey" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.075dp"
                    android:layout_below="@+id/rlTweetsInfo4"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorLightGrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTweetsInfo5"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/usernameTextView6"
                        style="@style/viewParent.headerText"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="Category"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/viewParent.headerText"
                        android:layout_below="@id/usernameTextView6"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Clothing"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="16sp" />

                    <ImageView
                        style="@style/viewParent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                        app:tint="@color/colorLightGrey" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.075dp"
                    android:layout_below="@+id/rlTweetsInfo5"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorLightGrey" />
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>

