<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".homepage.BsSellActivity">

    <RelativeLayout
        android:id="@+id/action_layout_profile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_button_profile"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/logo_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/back_button_profile"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="New Post"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            style="@style/Widget.Shrine.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="165dp"
            android:layout_toEndOf="@+id/logo_profile"
            android:background="@drawable/et_ui"
            android:gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="8dp"
            android:text="Post"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_layout_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="What are you offering"
                android:textColorHint="@color/colorLightGrey"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:counterTextColor="@color/colorLightGrey"
                app:errorEnabled="true"
                app:errorTextColor="@color/colorLightGrey"
                app:hintTextColor="@color/colorLightGrey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/colorLightGrey"
                    android:textColorHint="@color/colorLightGrey" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Price(R)"
                android:textColorHint="@color/colorLightGrey"
                app:hintTextColor="@color/colorLightGrey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/colorLightGrey"
                    android:textColorHint="@color/colorLightGrey" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="Choose Category"
                android:textColor="@color/colorLightGrey"
                android:textSize="18sp"
                android:textStyle="normal" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#0E5CAD" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#F55555" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#F761A1" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#43CBFF" />


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#623AA2" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#002661" />


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#6018DC" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#3CD500" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#3C8CE7" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#F8D800" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#EA5455" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#43E97B" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#2575FC" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#F83600" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#537895" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#CC208E" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#FA709A" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#32CCBC" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/to_do_post"
                        android:padding="16dp"
                        app:backgroundTint="#C32BAC" />

                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="EaziBuy As"
                android:textColor="@color/colorLightGrey"
                android:textSize="18sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/usernameTextView2"
                    style="@style/viewParent.headerText"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Location"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    style="@style/viewParent.headerText"
                    android:layout_below="@id/usernameTextView2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Joburg"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/viewParent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/colorLightGrey" />
            </RelativeLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                style="@style/settingsText"
                android:checked="true"
                android:drawableStart="@drawable/ic_location_on_white_24dp"
                android:drawableTint="@color/colorLightGrey"
                android:text="Show my contact on my Ads"
                android:textColor="@color/colorLightGrey" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Description"
                android:maxLines="11"
                android:textColorHint="@color/colorLightGrey"
                app:hintTextColor="@color/colorLightGrey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textEmailAddress"
                    android:maxLines="11"
                    android:textColor="@color/colorLightGrey"
                    android:textColorHint="@color/colorLightGrey" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/select_image" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_delete_black_24dp"
                    app:tint="@color/colorLightGrey" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/delete"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_add_black"
                    app:tint="@color/colorLightGrey" />

            </RelativeLayout>

            <!--            <com.google.android.material.tabs.TabLayout-->
            <!--                android:id="@+id/intro_tab_indicator"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                app:tabBackground="@drawable/indicator_selector" />-->

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="22dp"
                android:background="@drawable/roundedbottomnav"
                android:focusable="true"
                android:fontFamily="@font/gotham"
                android:padding="10dp"
                android:text="Publish Your Offer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
