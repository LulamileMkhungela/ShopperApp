                    app:stpi_circleRadius="6dp"
                    app:stpi_labelColor="@color/colorPrimaryDark"
                    app:stpi_lineColor="@color/colorPrimaryDark"
                    app:stpi_showLabels="true"
                    app:stpi_stepCount="4" />

