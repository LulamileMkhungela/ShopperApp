<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/action_bar_cluster_desc"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/back_button_clustered"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/action_title_clustered"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/back_button_clustered"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Item"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/bt_save_clustered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:textColor="@color/colorLightGrey" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar_cluster_desc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/icon_clustered"
                android:background="@drawable/gradient_top_black"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/bt_add_clustered"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:elevation="3dp"
                    android:padding="5dp"
                    android:src="@drawable/tagfree"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/bt_change_icon_clustered"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/icon_clustered"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_post"
                tools:ignore="ContentDescription,UnusedAttribute" />

            <LinearLayout
                android:id="@+id/bts_layout_clustered"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/description_clustered"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_ui"
                android:baselineAligned="false"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/poll_layout_clustered"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/bt_like_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_heart"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quiz_layout_clustered"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/bt_pollz"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_location_on_white_24dp"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/docs_layout_clustered"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/bt_comment_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_heart"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/images_layout_clustered"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_heart"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_clustered"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:elevation="2dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/progress_view_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/icon_clustered"
                android:background="@drawable/gradient_black" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/privacy_text_clustered"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/icon_clustered"
                android:layout_alignTop="@+id/created_text_clustered"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/default_profile_picture"
                app:civ_border_color="@color/colorLightGrey"
                app:civ_border_width="1.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/created_text_clustered"
                android:layout_alignParentStart="true"
                android:layout_marginStart="171dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="104dp"
                android:layout_toStartOf="@+id/created_text_clustered"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Counter dots"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/created_text_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_clustered"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:text="8/11/2020"
                android:textColor="@color/white"
                tools:ignore="RelativeOverlap" />

            <EditText
                android:id="@+id/title_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_clustered"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="6dp"
                android:background="@null"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:inputType="textPersonName"
                android:maxLines="3"
                android:text="Item "
                android:textColor="@color/colorLightGrey"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="Autofill,LabelFor" />

            <View
                style="@style/Divider"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_below="@+id/title_clustered"
                android:layout_marginTop="12dp"
                android:background="@color/colorLightGrey" />


            <EditText
                android:id="@+id/description_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_clustered"
                android:layout_alignParentStart="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="6dp"
                android:background="@null"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:inputType="textPersonName"
                android:maxLines="3"
                android:text="Item "
                android:textColor="@color/colorLightGrey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_name_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title_clustered"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="16dp"
                android:padding="6dp"
                android:text="Price: R 900"
                android:textColor="@color/colorLightGrey"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="ContentDescription" />


            <!--            <TextView-->
            <!--                android:id="@+id/members_number_clustered"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:layout_marginEnd="30dp"-->
            <!--                android:fontFamily="sans-serif-medium"-->
            <!--                android:text="Zero"-->
            <!--                android:textColor="@color/colorLightGrey"-->
            <!--                android:textSize="13sp" />-->


            <TextView
                android:id="@+id/admin_text_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bts_layout_clustered"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="Pre-Owned"
                android:textColor="@color/colorLightGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/admin_number_clustered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bts_layout_clustered"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Still available"
                android:textColor="@color/colorLightGrey"
                android:textSize="13sp" />


            <View
                android:id="@+id/line_admin_number"
                style="@style/Divider"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_below="@+id/admin_number_clustered"
                android:layout_marginTop="2dp"
                android:background="#000" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/recycler_members_clustered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_admin_number"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_members_clustered"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="R900 ZAR"
                android:textColor="@color/colorLightGrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/condition_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_members_clustered"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Still available"
                android:textColor="@color/colorLightGrey"
                android:textSize="13sp" />


            <View
                android:id="@+id/lay_divider"
                style="@style/Divider"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_below="@+id/condition_answer"
                android:layout_marginTop="4dp"
                android:background="@color/colorLightGrey" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_divider"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="Make Offer"
                android:textColor="@color/colorLightGrey"
                android:textSize="13sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_divider"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Buy Now"
                android:textColor="@color/colorLightGrey"
                android:textSize="13sp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>